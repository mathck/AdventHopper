<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="6dp"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:showDividers="none"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.23"
            android:layout_marginBottom="5dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/imageView"
                android:clickable="false"
                android:layout_weight="3.23"
                card_view:srcCompat="@mipmap/ic_belvedere"
                android:contextClickable="false"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:scaleType="centerCrop" />

            <TextView
                android:text="Belvedere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:layout_weight="3.23"
                android:ems="10"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:layout_alignLeft="@+id/imageView"
                android:layout_alignRight="@+id/imageView"
                android:layout_alignTop="@+id/imageView"
                android:layout_below="@+id/imageView"
                android:layout_alignBottom="@+id/imageView"
                android:gravity="bottom"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.23"
            android:paddingBottom="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.23"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:layout_height="match_parent"
                    card_view:srcCompat="@mipmap/ic_walk"
                    android:id="@+id/imageView2"
                    android:layout_width="35dp"
                    android:layout_margin="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:padding="0dp"
                    android:paddingBottom="0dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingStart="0dp"
                    android:paddingTop="0dp"
                    android:adjustViewBounds="false" />

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_body"
                    tools:text="250m"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.23"
                android:gravity="right"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">

                <RatingBar
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar"
                    android:minHeight="15dp"
                    android:maxHeight="50dp"
                    android:numStars="5"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:rating="3.5"
                    android:isIndicator="true"
                    android:stepSize="0.5"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:layout_centerVertical="true"
                    android:progressTint="@color/yellow_700"
                    android:drawingCacheQuality="high"
                    android:secondaryProgressTint="@color/yellow_700"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:srcCompat="?attr/actionModeShareDrawable"
                    android:id="@+id/imageView3"
                    android:layout_weight="0.33"
                    android:clickable="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
