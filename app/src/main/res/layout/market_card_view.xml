<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="6dp"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:showDividers="none"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3.23"
            android:clickable="true">

            <ImageView
                android:id="@+id/marketImage"
                android:transitionName="marketImage"
                android:clickable="false"
                android:contextClickable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:srcCompat="@mipmap/snow_backdrop"
                android:cropToPadding="false"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:contentDescription="Symbolbild Weihnachtsmarkt" />

            <TextView
                android:text="Belvedere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:transitionName="marketTitle"
                android:ems="10"
                android:layout_alignLeft="@+id/marketImage"
                android:layout_alignRight="@+id/marketImage"
                android:layout_alignTop="@+id/marketImage"
                android:layout_below="@+id/marketImage"
                android:layout_alignBottom="@+id/marketImage"
                android:gravity="bottom"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:fontFamily="sans-serif"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="16dp" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.23"
            android:padding="5dp"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/navigationLayout"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="8dp">

                <ImageView
                    android:layout_height="match_parent"
                    card_view:srcCompat="@mipmap/ic_walk"
                    android:id="@+id/walkIcon"
                    android:layout_width="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:padding="0dp"
                    android:paddingBottom="0dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingStart="0dp"
                    android:paddingTop="0dp"
                    android:alpha="0.54"
                    android:tint="@color/black"
                    android:adjustViewBounds="true"
                    android:contentDescription="Wegstrecke zu FuÃŸ"/>

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_body"
                    tools:text="100m"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:alpha="0.54" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="match_parent"
                android:layout_weight="3.23"
                android:layout_width="wrap_content"
                android:gravity="right">

                <RatingBar
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar"
                    android:transitionName="ratingBar"
                    android:numStars="5"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:rating="3.5"
                    android:isIndicator="true"
                    android:stepSize="0.5"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:progressTint="@color/yellow_700"
                    android:drawingCacheQuality="high"
                    android:secondaryProgressTint="@color/yellow_700"
                    android:layout_gravity="center"
                    android:layoutDirection="rtl"
                    android:theme="@style/RatingBar"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:srcCompat="?attr/actionModeShareDrawable"
                    android:id="@+id/shareIcon"
                    android:clickable="true"
                    android:alpha="0.54"
                    android:layout_gravity="right|center_vertical"
                    android:foregroundGravity="right|center_vertical"
                    android:padding="8dp"
                    android:tint="@color/black"
                    android:contentDescription="Teile den Weihnachtsmarkt mit Freunden"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
