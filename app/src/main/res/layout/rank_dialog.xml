<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp">

    <TextView android:text="@string/your_rating"
        android:id="@+id/rank_dialog_text"
        android:textSize="16sp"
        android:layout_margin="16dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    <RatingBar
        android:layout_below="@id/rank_dialog_text"
        android:id="@+id/dialog_ratingbar"
        android:layout_margin="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_centerHorizontal="true"
        android:theme="@style/RatingBar"
        android:drawingCacheQuality="high"
        android:fillViewport="true"
        android:numStars="5"
        android:stepSize="1.0"
        android:rating="0"
        android:isIndicator="false"/>

    <Button
        android:layout_below="@id/dialog_ratingbar"
        android:id="@+id/rank_dialog_button"
        android:layout_height="56dp"
        android:text="@string/rate"
        android:focusable="false"
        android:layout_margin="16dp"
        android:textSize="20sp"
        android:layout_width="fill_parent" />

</RelativeLayout>